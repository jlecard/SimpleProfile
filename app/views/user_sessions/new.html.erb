<h1>Connexion</h1>

<%= form_for @user_session, :as=>:user_session, :url => {:action => "create"} do |f| %>
  <% if @user_session.errors.any? %>
	<div id="error_explanation">
	  <h2><%= pluralize(@user_session.errors.count, "error") %> prohibited this user from being saved:</h2>
	
	  <ul>
	  <% @user_session.errors.full_messages.each do |msg| %>
	    <li><%= msg %></li>
	  <% end %>
	  </ul>
	</div>
  <% end %>
  <div>
	  <%= f.label :email %><br />
	  <%= f.text_field :email %><br />
	  <br />
	  <%= f.label :password %><br />
	  <%= f.password_field :password %><br />
	  <br />
	  <%= f.check_box :remember_me %><%= f.label :remember_me %><br />
	  <br />
	  <%= f.submit "Connexion" %>
  </div>
  <div>
  	<%=link_to "Nouvel utilisateur", :controller=>:profiles, :action=>:new %>
  </div>
<% end %>